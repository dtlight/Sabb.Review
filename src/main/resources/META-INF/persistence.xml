<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="SabbReview" >
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.sabbreview.model.User</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://127.0.0.1:5432/SabbReview"/>
            <property name="javax.persistence.jdbc.driver " value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="cs2855"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="eclipselink.target-database" value="PostgreSQL" />
            <property name="eclipselink.ddl-generation" value="create-tables" />
            <property name="eclipselink.ddl-generation.output-mode" value="database" />
        </properties>
    </persistence-unit>
</persistence>
